
@model List<ArticleDto>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">
            Makale Yönetimi/
        </span>
        Makaleler
    </h4>

    <div class="card">
        
        <div class="table-responsive text-nowrap m-5">

            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Article" asp-action="Add">
                Makale Ekle <i class="bx bx-plus" ></i>
            </a>

            <table class="table table-bordered" id="articlesTable" width="100%" collspacing="0">
            @*    id="articleTables" bu eklediğimiz javascript dosyasının erişecek id ile o yuzden isme dikkat et *@
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">    
                    
                    @foreach (var article in Model)
                    {
                        <tr name="@article.Id">
                            <td>@article.Title</td>
                            <td>@article.Category.Name</td>  @*burdaki categorydto dan aldığın name i category tablosundaki name ile aynı ismi olmalı*@
                       <td>@article.CreatedDate.ToShortDateString()</td>
                        <td>@article.CreatedBy</td>
                        <td>@(article.IsDeleted ? "Aktif Değil" :"Aktif")</td>
                        <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/ArticleIndexjs.js" type="application/ecmascript"></script> @*bunu layota tanıtman lazım yoksa hata verir*@
}